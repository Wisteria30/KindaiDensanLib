<div class="container">
  <div class="user">
    <div class="maintitle">
    <span class="biggestchar"><%= current_user.email %></span>
    <% if current_user.admin_flg %>
      <span class="biggerchar"><%= link_to "管理者ページ", rails_admin_path %></span>
    <% end %>
    <span class="biggerchar"><%= link_to "パスワードの変更", edit_user_registration_path %></span>
  </div>
  </div>
  <div class="subtitle">
    <h2>借りている本</h2>
  </div>
  <div class="rentalList">
    <% if @books.count!=0 %>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <tr>
            <th>タイトル</th>
            <th>著者</th>
            <th>出版者</th>
            <th>出版年</th>
            <th>ジャンル</th>
          </tr>
          <% @books.each do |book| %>
            <tr align="center">
              <td><%= link_to book.title, "/#{book.id}" %></td>
              <td><%= book.author %></td>
              <td><%= book.publisher %></td>
              <td><%= book.publish_date %></td>
              <td><%= book.genre %></td>
            </tr>
          <% end %>
        </table>
      </div>
    <% else %>
      <h2>貸出中の本はありません</h2>
    <% end %>
  </div>
</div>
