<div class="container">
  <div class="searchBar">
    <%= form_tag "/search", {method: "get"} do %>
      <%= text_field_tag :search %>
      <%= submit_tag :検索 %>
    <% end %>
  </div>
  <div class="bookList">
    <div class="table-responsive">
      <table class="table table-striped table-bordered text-center">
        <tr>
          <th>タイトル</th>
          <th>著者</th>
          <th>出版者</th>
          <th>ジャンル</th>
          <th>貸し出し状態</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, "#{book.id}" %></td>
            <td><%= book.author %></td>
            <td><%= book.publisher %></td>
            <td><%= book.genre %></td>
            <%if book.status %>
              <td>在庫あり</td>
            <% else %>
              <td>貸出中</td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
