<div class="container">
  <div class="admin-notice">
    <% if user_signed_in? && current_user.admin_flg && @notices.count != 0%>
      <h2><%= link_to "お知らせがあります", "/notice" %></h2>
      <% end %>
    </div>
    <%= form_tag "/search", {method: "get"} do %>
    <div class="searchBar">
    <!--<form class="form-inline">
    <div class="form-group">
      <input name="search" class="form-control" placeholder="書籍検索" type="text" style="font-size:20px">
    </div>
      <button type="submit" class="btn btn-default">検索</button>
    </form>
  -->
  <div class="input-group">
	<input type="text" name="search" class="form-control" placeholder="キーワードを入力..." style="font-size:20px">
	<span class="input-group-btn">
		<button type="submit" class="btn btn-default" >検索</button>
	</span>
</div>
</div>
    <% end %>
  <div class="bookList">
    <div class="table-responsive">
      <table class="table table-striped table-bordered text-center">
        <tr>
          <th>タイトル</th>
          <th>著者</th>
          <th>出版者</th>
          <th>ジャンル</th>
          <th>貸し出し状態</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%= link_to book.title, "#{book.id}" %></td>
            <td><%= book.author %></td>
            <td><%= book.publisher %></td>
            <td><%= book.genre %></td>
            <%if book.status %>
              <td>在庫あり</td>
            <% else %>
              <td>貸出中</td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
